<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" group="jcomments" version="1.6" method="upgrade">
	<name>plg_jcomments_avatar</name>
	<author>Luan Vu</author>
	<creationDate>2012-07-09</creationDate>
	<copyright>Copyright (C) 2012 TVTMarine All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>luan.vu@tvtmarine.com</authorEmail>
	<authorUrl>http://www.tvtmarine.com</authorUrl>
	<version>1.3</version>
	<description>PLG_JCOMMENTS_AVATAR_XML_DESCRIPTION</description>
	<files>
		<filename plugin="avatar">avatar.php</filename>
		<folder>types</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="avatar_type" type="list" default="gravatar" label="Avatar Source" description="Select user avatars source">
					<option value="agora">Agora Forum</option>
					<option value="cb">CommunityBuilder</option>
					<option value="ccboard">ccBoard</option>
					<option value="contacts">Contacts</option>
					<option value="fireboard">FireBoard Forum</option>
					<option value="gravatar">Gravatar</option>
					<option value="idoblog">IDoBlog</option>
					<option value="jomsocial">JomSocial</option>
					<option value="joobb">JooBB Forum</option>
					<option value="joomsuite_user">JoomSuite User</option>
					<option value="k2">K2</option>
					<option value="kunena">Kunena Forum</option>
					<option value="magazine">iJoomla Magazine</option>
					<option value="ninjaboard">Ninjaboard</option>
					<option value="p8pbb">phpBB3 - Blogomunity p8pbb bridge</option>
					<option value="phpbb3_jf">phpBB3 - JFusion bridge</option>
					<option value="phpbb3_rb">phpBB3 - RokBridge</option>
					<option value="vb">vBulletin</option>
				</field>
		
				<field name="avatar_noavatar" type="list" default="default" label="NoAvatar" description="">
					<option value="default">Default image</option>
					<option value="custom">Custom image</option>
					<option value="gravatar">Gravatar</option>
				</field>
				<field name="avatar_custom_noavatar" type="text" default="" label="Custom NoAvatar image" description="" />
		
				<field name="avatar_link" type="radio" default="0" label="Link to profile" description="Link avatar to user profile">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="avatar_link_target" type="radio" default="_blank" label="Target" description="Target window when the profile link is clicked">
					<option value="">Parent Window with Browser Navigation</option>
					<option value="_blank">New Window with Browser Navigation</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jcomments_avatar.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jcomments_avatar.sys.ini</language>
	</languages>
</install>