<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
 
	<name>COM_TVTPROJECT</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>July 2012</creationDate>
	<author>Luan Vu</author>
	<authorEmail>luan.vu@tvtmarine.com</authorEmail>
	<authorUrl>http://www.tvtmarine.com</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.22</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_TVTPROJECT_DESCRIPTION</description>
 
 
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>tvtproject.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
                <folder>js</folder>
	</files>
        
        <languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_tvtproject.ini</language>
                <language tag="vi-VN">vi-VN/vi-VN.com_tvtproject.ini</language>
	</languages>
 
	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_TVTPROJECT_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>tvtproject.php</filename>
			<filename>controller.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
			<!-- helpers files section -->
			<folder>helpers</folder>
		</files>
 
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_tvtproject.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_tvtproject.sys.ini</language>
		</languages>
	</administration>
 
</extension>

