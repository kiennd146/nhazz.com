<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="message" addfieldpath="/administrator/components/com_vitabook/models/fields" addrulepath="/administrator/components/com_vitabook/models/rules">
        <fields>
            <field
                name="id"
                type="hidden"
                default="0"
            />
            <field
                name="parent_id"
                type="hidden"
                size="4"
                class="inputbox"
                default="1"
                validate="parentid"
            />
            <field
                name="jid"
                type="hidden"
                size="4"
                class="inputbox"
                default=""
            />
            <field
                name="secureform"
                type="text"
                class="vbMessageFormSecureform"
                default=""
                validate="secureform"
            />
            
            <field
                name="date"
                type="hidden"
                format="%Y-%m-%d %H:%M:%S"
                default=""
            />
            <field
                name="message"
                type="vitabookEditor"
                label="COM_VITABOOK_FORM_TEXT"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_TEXT_DESC"
                height="200"
                required="true"
                default=""
                filter="safehtml"
                class="mceEditor"
            />
            
            <field
				name="images"
				type="hidden"
				label="COM_VITABOOK_MESSAGE_FORM_MESSAGE"
				height="200"
				default=""
			/>
            <field
                name="published"
                type="hidden"
                size="1"
                class="inputbox"
                default="0"
            />
            <!--field
                name="captcha"
                type="captcha"
                label="COM_VITABOOK_FORM_CAPTCHA"
                labelclass="control-label"
                validate="captcha"
                namespace="message"
            /-->
        </fields>
    </fieldset>
</form>
